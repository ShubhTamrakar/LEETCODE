class Solution {
public:
    int findMaxLength(vector<int>& nums) {
        unordered_map<int, int> prefixIndex;
        prefixIndex[0] = -1;

        int maxLen = 0, sum = 0;
        for (int i = 0; i < nums.size(); ++i) {
            sum += nums[i] == 1 ? 1 : -1;
            if (prefixIndex.count(sum)) {
                maxLen = max(maxLen, i - prefixIndex[sum]);
            } else {
                prefixIndex[sum] = i;
            }
        }

        return maxLen;
    }
};
